@model DebtSnowballApp.Models.Partner
@{
    ViewData["Title"] = "Delete Partner";
}
<div class="container py-4">
    <h1 class="mb-3">Delete Partner</h1>
    <div class="alert alert-warning">This will permanently remove the partner.</div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                <dt class="col-sm-3">Website</dt>
                <dd class="col-sm-9">@Model.Website</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.SupportEmail</dd>
                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.SupportPhone</dd>
                <dt class="col-sm-3">Active</dt>
                <dd class="col-sm-9">@Model.Active</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-3 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    <button class="btn btn-danger" type="submit">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
