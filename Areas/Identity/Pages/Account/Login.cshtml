@page
@model DebtSnowballApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4 p-md-5">

                    <h1 class="h3 mb-3 text-center">@ViewData["Title"]</h1>

                    <!-- Validation summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- LOGIN FORM -->
                    <form method="post" autocomplete="on">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-floating mb-3">
                            <input asp-for="Input.LoginInput" class="form-control" autocomplete="username" />
                            <label asp-for="Input.LoginInput">Email or username</label>
                            <span class="text-danger" asp-validation-for="Input.LoginInput"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                            <label asp-for="Input.Password"></label>
                            <span class="text-danger" asp-validation-for="Input.Password"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-2">Log in</button>

                        <div class="d-flex justify-content-between mb-3">
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                            <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <h2 class="h5 text-center mb-3">New here? Create an account</h2>
                    <a href="#" id="registerLink">Register as a new user</a>


                    @if (Model.ExternalLogins != null && Model.ExternalLogins.Count > 0)
                    {
                        <hr class="my-4" />
                        <div class="text-center mb-2">Or sign in with</div>
                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <form method="post" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="d-grid">
                                    <button type="submit" class="btn btn-outline-secondary">
                                        @provider.DisplayName
                                    </button>
                                </form>
                            }
                        </div>
                    }
                </div>
                          </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const registerLink = document.getElementById('registerLink');
            if (!registerLink) return;

            registerLink.addEventListener('click', function (e) {
                e.preventDefault();

                const emailInput= document.getElementById('Input_LoginInput');
                const email = emailInput ? emailInput.value.trim() : "";
                console.log(emailInput);
                // 👇 Force no area (root controllers)
                let url = '@Url.Action("Step4Order", "QuickAnalysis", new { area = "" })';

                if (email) {
                    url += '?email=' + encodeURIComponent(email);
                }

                window.location.href = url;
            });
        })();
    </script>
}
