@model DebtSnowballApp.Models.QaDebtItem
@{
    ViewData["Title"] = "Edit Quick Analysis Debt";
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="BegBalance" class="form-label"></label>
                <input asp-for="BegBalance" class="form-control" />
                <span asp-validation-for="BegBalance" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Balance" class="form-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

        </div>

        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <label asp-for="MinimumPayment" class="form-label"></label>
                <input asp-for="MinimumPayment" class="form-control" />
                <span asp-validation-for="MinimumPayment" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="InterestRate" class="form-label"></label>
                <input asp-for="InterestRate" class="form-control" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
