@model DebtSnowballApp.Models.QuickAnalysisResultViewModel
@{
    ViewData["Title"] = "Quick Analysis – Step 3";
}

<div class="container my-4  quick-analysis">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="position-relative mb-4" style="min-height: 60px;">

                <!-- Centered Title -->
                <h2 class="fw-bold text-center m-0"
                    style="line-height: 1.2;">
                    Quick Analysis
                </h2>

                <!-- Prepared For block fixed to the right -->
                <div class="position-absolute end-0 top-50 translate-middle-y text-end">
                    <div class="small text-uppercase text-muted">Prepared for</div>
                    <div class="fw-semibold fs-5">@Model.ClientName</div>
                </div>

            </div>
            <!-- Step header bar -->
            <div class="qa-steps d-flex justify-content-center mb-4">
                <div class="qa-step">
                    <span class="qa-step-number">Step 1</span>
                    <span class="qa-step-label">Personal Info</span>
                </div>
                <div class="qa-step">
                    <span class="qa-step-number">Step 2</span>
                    <span class="qa-step-label">Debts</span>
                </div>
                <div class="qa-step active">
                    <span class="qa-step-number">Step 3</span>
                    <span class="qa-step-label">Analysis</span>
                </div>
                <div class="qa-step">
                    <span class="qa-step-number">Step 4</span>
                    <span class="qa-step-label">Order</span>
                </div>
            </div>

            <!-- Comparison + Cost Per Day -->
            <div class="row g-3 mb-4 align-items-stretch">

                <!-- Comparison table -->
                <div class="col-lg-7">
                    <div class="card shadow-sm h-100 border-3">
                        <div class="card-header py-2 fw-bold text-center">
                            Current Debt vs. My Financial Outlook
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-sm mb-0 align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col"></th>
                                            <th scope="col" class="text-end">Current</th>
                                            <th scope="col" class="text-end">My Plan</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">Total Debt</th>
                                            <td class="text-end">
                                                @Model.CurrentTotalDebt.ToString("C0")
                                            </td>
                                            <td class="text-end fw-semibold text-success">
                                                @Model.PlanTotalDebt.ToString("C0")
                                            </td>
                                        </tr>
                                        <tr class="table-light">
                                            <th scope="row">Monthly Debt Payment</th>
                                            <td class="text-end">
                                                @Model.CurrentMonthlyDebt.ToString("C0")
                                            </td>
                                            <td class="text-end fw-semibold text-success">
                                                @Model.PlanMonthlyDebt.ToString("C0")
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Debt Freedom</th>
                                            <td class="text-end">
                                                @Model.CurrentDebtFreedomYears.ToString("0.0") years
                                            </td>
                                            <td class="text-end fw-semibold text-success">
                                                @Model.PlanDebtFreedomYears.ToString("0.0") years
                                            </td>
                                        </tr>
                                        <tr class="table-light">
                                            <th scope="row">Principal &amp; Interest Paid</th>
                                            <td class="text-end">
                                                @Model.CurrentPrincipalAndInterest.ToString("C0")
                                            </td>
                                            <td class="text-end fw-semibold text-success">
                                                @Model.PlanPrincipalAndInterest.ToString("C0")
                                            </td>
                                        </tr>
                                        <tr class="fw-bold fs-4">
                                            <th colspan="2" class="text-end text-success" scope="row">Total Savings</th>
                                            <td class="text-end text-success">
                                                @Model.TotalSavings.ToString("C0")
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cost of Not Taking Action -->
                <div class="col-lg-5 d-flex justify-content-center">
                    <div class="card cost-zoom-card h-100 border-3 w-100"
                         style="max-width: 380px;">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <div class=" fw-bold text-uppercase mb-1">
                                Cost of Not Taking Action
                            </div>
                            <p class="mb-2 small">
                                <span class="fw-bold">Every day</span> you delay starting this plan costs you approximately:
                            </p>
                            <div class="display-6 fw-bold text-danger mb-1">
                                @Model.CostPerDay.ToString("C0")
                            </div>
                            <div class="small text-muted">
                                in lost future wealth<sup>*</sup>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Wealth Builder -->
            <div class="mx-auto w-50 col-8 card cost-zoom-card mb-4 border-3">
                <div class="card-body pb-3">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-2">
                        <h5 class="mb-2 mb-md-0 fw-semibold">Wealth Builder</h5>
                        <div class="text-md-end">
                            <div class="small fw-bold text-uppercase">Projected Total Wealth</div>
                            <div class="fs-4 fw-bold text-danger">
                                @Model.WealthBuilderTotalWealth.ToString("C0")
                            </div>
                        </div>
                    </div>

                    <hr class="my-2" />

                    <div class="row text-center small">
                        <div class="col-md-4 mb-2 mb-md-0">
                            <div class="fw-bold fs-5">
                                @Model.WealthBuilderMonthlyContribution.ToString("C0")
                            </div>
                            <div class="text-muted text-uppercase">Monthly Investment</div>
                        </div>
                        <div class="col-md-4 mb-2 mb-md-0">
                            <div class="fw-bold fs-5">
                                @Model.WealthBuilderPeriodYears.ToString("0.0") years
                            </div>
                            <div class="text-muted text-uppercase">Investment Period</div>
                        </div>
                        <div class="col-md-4">
                            <div class="fw-bold fs-5">
                                @Model.WealthBuilderRoiPercent.ToString("0.#")%
                            </div>
                            <div class="text-muted text-uppercase">Annual Return</div>
                        </div>
                    </div>

                    <p class="mt-3 mb-0 small text-muted">
                        Once you are debt free, redirecting your monthly debt payments into conservative
                        investments over the years you’ve saved can build significant long-term wealth.
                    </p>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">

                <form asp-action="Step3Previous" method="post" class="m-0 me-3">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-prev px-4">Previous</button>
                </form>

                <form asp-action="Step3Next" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-next px-4">Next</button>
                </form>

            </div>


            <p class="mt-2 mb-0 small text-muted">
                <sup>*</sup> Based on your current debt, payoff time, and an assumed
                @Model.WealthBuilderRoiPercent.ToString("0.#")% annual return.
            </p>
        </div>

    </div>
</div>
