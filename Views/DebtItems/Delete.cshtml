@using DebtSnowballApp.Models
@model DebtItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Debt</h1>

<h4 class="text-danger">Are you sure you want to delete this debt?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Balance)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Balance)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MinimumPayment)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.MinimumPayment)</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.InterestRate)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.InterestRate)</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
